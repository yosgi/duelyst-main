<div class="dialog-background" {{#if background}} style="background: {{background}}" {{/if}}></div>

<div class="modal-dialog">
	<button type="button" class="btn btn-clean btn-cancel-primary cancel-dialog"></button>
	<div class="modal-content">
		<div class="modal-header">
			<h4 class="modal-title">{{localize 'profile.share_replay_title'}}</h4>
		</div>
		<div class="modal-body">
			<div class="modal-message">{{localize 'profile.share_replay_message'}}</div>
			<input type="text" class="replay-link" value="{{ replayUrl }}" />
		</div>
		<div class="modal-footer">
			<button id="copy_replay_url_button" class="btn btn-clean btn-clean-primary cancel-dialog" data-clipboard-text="{{ replayUrl }}">{{localize 'profile.share_replay_button_label'}}</button>
		</div>
	</div>
</div>
